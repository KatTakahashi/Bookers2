<p id="notice"></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
<!-- L:User Info -->
  <!-- ■ユーザーid反映 -->
        <!-- attachment_image_tag 保存先インスタンス名, :保存先カラム名, :fill, 幅, 高さ, format:'拡張子', fallback:"代替画像"  -->
        <tr>
          <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg", size: '63x63' %>
        </tr>
        <tr>
      	  <th>name</th>
  <!-- userモデルからユーザーnameを代入 -->
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
  <!-- uerモデルからユーザーintroductionを代入 -->
      	  <th><%= @user.introduction %></th>
        </tr>
      </table>

<!-- L:User情報編集ボタン -->
      <div class='row'>
  <!-- ■link_to へ書き換え -->
  <!-- ■User id反映  -->
        <% if @user.id == current_user.id %>
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <% end %>
      </div>

<!--L:book 投稿 -->
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, url:'/books', local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control book_body" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>

      <% end %>
        </div>
    </div>

<!-- R:book id反映+一覧表示 -->
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <!-- 投稿者のプロフィール写真 -->
                <th><%= link_to user_path(@user) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg", size: '63x63' %></th>
                    <% end %>
                <!-- Bookデータtitle -->
                <th><%= link_to book.title, book_path(book.id) %></th>
                <!-- Bookデータbody -->
                <th><%= book.body %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



