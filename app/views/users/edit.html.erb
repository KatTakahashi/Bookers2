<p id="notice"></p>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model:@user, url: user_path(@user), local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"user[name]", class:"form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.attachment_field :profile_image, id:"user_profile_image", placeholder: "プロフィール画像", class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"user[introduction]", class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>